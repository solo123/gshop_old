= form_for(@accounting_document) do |f|
  - if @accounting_document.errors.any?
    #error_explanation
      h2
        = pluralize(@accounting_document.errors.count, "error")
        | prohibited this accounting_document from being saved:
      ul
        - @accounting_document.errors.full_messages.each do |msg|
          li= msg
  .field
    = f.label :operator
    br/
    = f.text_field :operator
  .actions
    = f.submit
