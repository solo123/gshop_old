%h1 Listing customers
%table
  %tr
    %th Name
    %th Title
    %th Mobile
    %th Phone
    %th Email
    %th Qq
    %th Address
    %th Level
    %th Info
    %th Reason
    %th
    %th
    %th
  = will_paginate @collection
  - @collection.each do |customer|
    %tr
      %td= customer.name
      %td= customer.title
      %td= customer.mobile
      %td= customer.phone
      %td= customer.email
      %td= customer.qq
      %td= customer.address
      %td= customer.level
      %td= customer.info
      %td= customer.reason
      %td= link_to 'Show', customer
      %td= link_to 'Edit', edit_customer_path(customer)
      %td= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' }
= will_paginate @collection
%br/
= link_to 'New Customer', new_customer_path
