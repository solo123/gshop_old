= form_for(@object) do |f|
  - if @object.errors.any?
    #error_explanation
      h2
        = pluralize(@object.errors.count, "error")
        | prohibited this accessory from being saved:
      ul
        - @object.errors.full_messages.each do |msg|
          li= msg
  .field
    = f.label :short_code
    br/
    = f.text_field :short_code
  .field
    = f.label :brand
    br/
    = f.text_field :brand
  .field
    = f.label :name
    br/
    = f.text_field :name
  .field
    = f.label :catalog
    br/
    = f.text_field :catalog
  .field
    = f.label :info
    br/
    = f.text_field :info
  .field
    = f.label :price
    br/
    = f.text_field :price
  .actions
    = f.submit
