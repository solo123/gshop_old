<h1>Listing notes</h1>

<table>
  <thead>
    <tr>
      <th>Notes data type</th>
      <th>Notes data</th>
      <th>Notes text</th>
      <th>Employee</th>
      <th>Status</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.notes_data_type %></td>
        <td><%= note.notes_data_id %></td>
        <td><%= note.notes_text %></td>
        <td><%= note.employee_id %></td>
        <td><%= note.status %></td>
        <td><%= link_to 'Show', note %></td>
        <td><%= link_to 'Edit', edit_note_path(note) %></td>
        <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

