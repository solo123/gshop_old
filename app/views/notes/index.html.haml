%h1 Listing notes
%table
  %thead
    %tr
      %th Notes data type
      %th Notes data
      %th Notes text
      %th Employee
      %th Status
      %th
      %th
      %th
  %tbody
    - @notes.each do |note|
      %tr
        %td= note.notes_data_type
        %td= note.notes_data_id
        %td= note.notes_text
        %td= note.employee_id
        %td= note.status
        %td= link_to 'Show', note
        %td= link_to 'Edit', edit_note_path(note)
        %td= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' }
%br
  = link_to 'New Note', new_note_path
