= link_to 'New Employee', new_employee_path, remote: true

= will_paginate @collection
%table.table.table-bordered.table-striped.table-hover
  %thead
    %tr
      %th ID#
      %th Name
      %th Email
      %th Role
      %th
  %tbody
    - @collection.each do |e|
      %tr
        %td= e.id
        %td= best_in_place e, :nickname, :type => :input
        %td= e.email
        %td= e.roles
        %td
          = link_to 'Show', e
          = link_to 'Edit', edit_employee_path(e), remote: true
          = link_to 'Destroy', e, method: :delete, data: { confirm: 'Are you sure?' }
= will_paginate @collection

