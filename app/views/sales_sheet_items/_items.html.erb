<table class='striped bordered'>
  <tr>
    <th>Serial</th>
    <th>Product</th>
    <th>Description</th>
    <th>Quantity</th>
    <th>Price</th>
    <th>Amount</th>
    <th></th>
  </tr>

<% items.each do |sales_sheet_item| %>
  <tr>
    <td><%= sales_sheet_item.serial_product.serial_number if sales_sheet_item.serial_product %> <%= sales_sheet_item.serial_number %></td>
    <td><%= sales_sheet_item.product_data_type %>-<%= sales_sheet_item.product_data_id %></td>
    <td><%= sales_sheet_item.description %></td>
    <td><%= sales_sheet_item.quantity %></td>
    <td><%= sales_sheet_item.price %></td>
    <td><%= sales_sheet_item.amount %></td>
    <td>
      <%= link_to 'Edit', edit_sales_sheet_item_path(sales_sheet_item) %> |
      <%= link_to 'Destroy', sales_sheet_item, method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>

