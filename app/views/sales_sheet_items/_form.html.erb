        </div>
        <div class="field">
          <%= f.label :quantity %><br />
          <%= f.text_field :quantity, :id => 'quantity' %>
        </div>
        <%= link_to 'Select product', select_products_path, :remote => true %> 
      </div>
    </div>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :amount %><br />
    <%= f.text_field :amount %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
