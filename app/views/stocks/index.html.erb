<h1>Listing stocks</h1>

<table>
  <tr>
    <th>Product</th>
    <th>On hand</th>
    <th>Info</th>
    <th>Title photo</th>
    <th>Last buy date</th>
    <th>Sold out date</th>
    <th></th>
  </tr>

<% @collection.each do |stock| %>
  <tr>
    <td><%= stock.product_data.full_name if stock.product_data %></td>
    <td><%= stock.on_hand %></td>
    <td><%= stock.info %></td>
    <td><%= stock.title_photo_id %></td>
    <td><%= stock.last_buy_date %></td>
    <td><%= stock.sold_out_date %></td>
    <td>
      <%= link_to '编号产品', serials_stock_path(stock), :remote => true %> |
      <%= link_to '刷新', add_serials_stock_path(stock), :remote => true %> |
      <%= link_to '历史', stock_stock_journals_path(stock) %>
    </td>
  </tr>
<% end %>
</table>

<%= link_to '返回', url_for(@parent)  if @parent%>
