<h1>Listing stocks</h1>

<table>
  <tr>
    <th>Product data type</th>
    <th>Product data</th>
    <th>On hand</th>
    <th>Info</th>
    <th>Title photo</th>
    <th>Last buy date</th>
    <th>Sold out date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @stocks.each do |stock| %>
  <tr>
    <td><%= stock.product_data_type %></td>
    <td><%= stock.product_data_id %></td>
    <td><%= stock.on_hand %></td>
    <td><%= stock.info %></td>
    <td><%= stock.title_photo_id %></td>
    <td><%= stock.last_buy_date %></td>
    <td><%= stock.sold_out_date %></td>
    <td><%= link_to 'Show', stock %></td>
    <td><%= link_to 'Edit', edit_stock_path(stock) %></td>
    <td><%= link_to 'Destroy', stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

