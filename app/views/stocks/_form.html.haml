= form_for(@stock) do |f|
  - if @stock.errors.any?
    #error_explanation
      %h2
        = pluralize(@stock.errors.count, "error")
        prohibited this stock from being saved:
      %ul
        - @stock.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :product_data_type
    %br/
    = f.text_field :product_data_type
  .field
    = f.label :product_data_id
    %br/
    = f.number_field :product_data_id
  .field
    = f.label :on_hand
    %br/
    = f.number_field :on_hand
  .field
    = f.label :info
    %br/
    = f.text_field :info
  .field
    = f.label :title_photo_id
    %br/
    = f.number_field :title_photo_id
  .field
    = f.label :last_buy_date
    %br/
    = f.date_select :last_buy_date
  .field
    = f.label :sold_out_date
    %br/
    = f.date_select :sold_out_date
  .actions
    = f.submit
