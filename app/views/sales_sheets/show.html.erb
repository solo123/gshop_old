<p id="notice"><%= notice %></p>

<p class='bg-color-greenDark padding10 fg-color-white toolbox'>
<%= link_to 'Edit', edit_sales_sheet_path(@object) %> |
<%= link_to 'Back', sales_sheets_path %> |
<%= link_to '新增项目', new_sales_sheet_sales_sheet_item_path(@object) %> |
<%= link_to '计算', calculate_sales_sheet_path(@object) %> |
<%= link_to '完成！', entering_sales_sheet_path(@object) %> |
<%= link_to '打印', print_sales_sheet_path(@object), :target => 'print_win' %>
</p>

<div class='grid'>
  <div class='row'>
    <div class='span4'>
<p>
  <b>Customer:</b>
  <% if @object.customer %> <%= @object.customer.title %>
    <%= @object.customer.name %>, Tel: <%= @object.customer.mobile %>,<%= @object.customer.phone %>
  <% else %>
    (no customer)
  <% end %>
</p>

<p>
  <b>Warehouse:</b>
  <%= @object.warehouse.name if @object.warehouse %>
</p>
</div>
<%
  customer = Customer.new
%>
<div class='span4'>
  <%= form_for(customer) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :mobile %><br />
    <%= f.text_field :mobile %>
  </div>
  <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :qq %><br />
    <%= f.text_field :qq %>
  </div>
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :level %><br />
    <%= f.number_field :level %>
  </div>
    <%= link_to 'customer', select_customers_path, :remote => true %>
  <div class="actions">
    <%= f.submit %>
  </div>
  <% end %>

  </div>

</div>
</div>

<%= render :partial => '/sales_sheet_items/items', :object => @object.sales_sheet_items %>

<p>
  <b>Status:</b> <%= @object.status %>
  <b>Operator:</b><%= @object.operator_id %>
  <b>Total items:</b><%= @object.total_items %>
  <b>Amount:</b><%= @object.total_amount %> + <%= @object.additional_fee %>(fee) - <%= @object.discount %>(discount) =
  <b><%= @object.actual_amount %></b>
</p>

<p>
  <b>Info:</b>
  <%= @object.info %>
</p>
<p>
</p>

