= form_for(@object) do |f|
  - if @object.errors.any?
    #error_explanation
      h2
        = pluralize(@object.errors.count, "error")
        | prohibited this sales_sheet from being saved:
      ul
        - @object.errors.full_messages.each do |msg|
          li= msg
  .field
    = f.label :customer_id
    br/
    = f.text_field :customer_id
  .field
    = f.label :warehouse_id
    br/
    = f.text_field :warehouse_id
  .field
    = f.label :operator_id
    br/
    = f.text_field :operator_id
  .field
    = f.label :additional_fee
    br/
    = f.text_field :additional_fee
  .field
    = f.label :actual_amount
    br/
    = f.text_field :actual_amount
  .field
    = f.label :info
    br/
    = f.text_field :info
  .actions
    = f.submit
