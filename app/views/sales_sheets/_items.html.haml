%table{:class => 'table table-striped table-bordered table-hover', :id => 'sales_sheet_items_list'}
  %thead
    %tr
      %th Serial
      %th Product#
      %th Description
      %th Quantity
      %th Price
      %th Amount
      %th
  %tbody
    - sales_sheet.sales_sheet_items.each do |sales_sheet_item| 
      %tr
        %td
          = sales_sheet_item.serial_product.serial_number if sales_sheet_item.serial_product
          = sales_sheet_item.serial_number
        %td
          = "#{sales_sheet_item.id}#"
          = sales_sheet_item.product.full_name if sales_sheet_item.product
        %td= sales_sheet_item.description
        %td= sales_sheet_item.quantity
        %td= sales_sheet_item.price
        %td= sales_sheet_item.amount
        %td
          - unless sales_sheet.status == 1
            = link_to 'Edit', edit_sales_sheet_sales_sheet_item_path(sales_sheet, sales_sheet_item)
            |
            = link_to 'Destroy', sales_sheet_sales_sheet_item_path(sales_sheet, sales_sheet_item), method: :delete, :confirm => 'Are you sure?'

