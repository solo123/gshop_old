= form_for(@object) do |f|
  - if @object.errors.any?
    #error_explanation
      %h2
        = pluralize(@object.errors.count, "error")
        prohibited this manufactory from being saved:
      %ul
        - @object.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :address
    %br/
    = f.text_field :address
  .field
    = f.label :website
    %br/
    = f.text_field :website
  .field
    = f.label :phone
    %br/
    = f.text_field :phone
  .field
    = f.label :email
    %br/
    = f.text_field :email
  .field
    = f.label :bank_account
    %br/
    = f.text_field :bank_account
  .field
    = f.label :contact
    %br/
    = f.text_field :contact
  .field
    = f.label :rating
    %br/
    = f.text_field :rating
  .actions
    = f.submit
