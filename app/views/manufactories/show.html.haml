  - @object.customers.each do |customer|
    %tr
      %td= customer.name
      %td= customer.title
      %td= customer.mobile
      %td= customer.phone
      %td= customer.email
      %td= customer.qq
      %td= customer.address
      %td= customer.level
      %td= customer.info
      %td= customer.reason
      %td
        = link_to 'Edit', edit_customer_path(customer)
        |
        \#{link_to 'Remove', remove_customer_manufactory_path(@object, :customer => customer.id), method: :delete, confirm: 'Are you sure?'}
