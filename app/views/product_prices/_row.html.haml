%tr{id: "#{dom_id(p)}"}
  %td= p.id
  %td
    = p.full_name
    - if p.product_price
      %td.num= best_in_place p.product_price, :price, :type => :input
      %td.num= number_with_precision p.product_price.godown_price, precision: 2
      %td.num #{number_with_precision(p.product_price.godown_price * 100 / p.product_price.price, precision: 2)}%
      %td.num= p.product_price.godown_count
      %td.num= p.product_price.godown_amount
      %td.num= p.product_price.godown_fee
      %td= p.product_price.status
      %td
        .btn-group
          = link_to 'Edit', edit_product_path(p), class: 'btn btn-mini btn-default', remote: :true
          = link_to 'price', edit_product_price_path(p.product_price), :class => 'btn btn-mini'
    - else
      %td{:colspan => "7"}= link_to 'Add', add_price_product_price_path(p), :class => 'btn btn-mini', :remote => true

