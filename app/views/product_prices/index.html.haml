.dropdown
  %a.dropdown-toggle{ 'data-toggle' => "dropdown", href: "#"}选择分类
  %ul.dropdown-menu{role: 'menu', 'aria-labelledby' => 'dropdownMenu'}
    %li= link_to 'ALL', product_prices_path
    - @catalogs.each do |cat|
      %li= link_to "#{cat.catalog} (#{cat.count})", product_prices_path(:cat => cat.catalog)

%table.table.table-bordered.table-striped.table-hover
  %tr
    %th ID
    %th Product
    %th Price
    %th Godown count
    %th Godown amount
    %th Godown fee
    %th Godown price
    %th Status
    %th
  - @collection.each do |p|
    = render partial: 'row', locals: {p: p}
%br/
