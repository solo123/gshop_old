    <%= f.label :product_data_id %><br />
    <%= f.number_field :product_data_id %>
  </div>
  <div class="field">
    <%= f.label :product_model %><br />
    <%= f.text_field :product_model %>
  </div>
  <div class="field">
    <%= f.label :title_photo_id %><br />
    <%= f.number_field :title_photo_id %>
  </div>
  <div class="field">
    <%= f.label :production_batch_id %><br />
